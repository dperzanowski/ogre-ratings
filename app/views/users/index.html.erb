<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user do %>
            <%= user.email %>
          <% end -%>
        </td>
        <td>
          <div class="pull-right">
            <%= link_to edit_user_path(user),  :class => 'btn btn-default btn-xs' do %>
              <span class="glyphicon glyphicon-pencil"></span> Edit
            <% end -%>
            <%= link_to user_path(user), method: :delete, :class => 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-minus"></span> Delete
            <% end -%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path, :class => 'btn btn-default btn-xs' do %>
  <span class="glyphicon glyphicon-plus"></span> New User
<% end -%>
